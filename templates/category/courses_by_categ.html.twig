{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<!-- Header Start -->
	<div class="container-fluid bg-primary py-5 mb-5 page-header">
		<div class="container py-5">
			<div class="row justify-content-center">
				<div class="col-lg-10 text-center">
					{% if courses is defined %}
						{% for course in courses %}
							<h1 class="display-3 text-white animated slideInDown">{{course.category.label}}</h1>
							<nav aria-label="breadcrumb">
								<ol class="breadcrumb justify-content-center">
									<li class="breadcrumb-item">
										<a class="text-white" href="{{ path('app_home')}}">Accueil</a>
									</li>
									<li class="breadcrumb-item">
										<a class="text-white" href="{{ path('app_categories')}}">Categories</a>
									</li>
									<li class="breadcrumb-item text-white active" aria-current="page">{{course.category.label}}</li>
								{% endfor %}
							{% endif %}
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<!-- Header End -->

	<!-- Categories Start -->
	<div class="container-xxl py-5 category">
		<div class="container">
			<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
				<h6 class="section-title bg-white text-center text-primary px-3">Categories</h6>
				{% if courses is defined %}
					{% for course in courses %}
						<h1 class="mb-5">{{course.category.label}}</h1>
					{% endfor %}
				{% endif %}
			</div>
			<div class="row g-3">
				<div class="col-lg-12 col-md-6">
					<div class="row g-3">
						{% if courses is defined %}
							{% for course in courses %}
								<div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
									<a href="{{ path('app_viewCourses',{id: course.id})}}">
										<div class="team-item bg-light">
											<div class="overflow-hidden">
												<img class="img-fluid" src="{{course.img}}" alt="">
											</div>
											<div class="text-center p-4">
												<h5 class="mb-0">{{course.title}}</h5>
												<small>{{course.category.label}}</small>
											</div>
										</div>
									</a>
								</div>
							{% endfor %}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Categories Start -->

	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
		<i class="bi bi-arrow-up"></i>
	</a>
{% endblock %}
