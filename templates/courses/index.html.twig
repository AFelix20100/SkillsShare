{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<!-- Header Start -->
	<div class="container-fluid bg-primary py-5 mb-5 page-header">
		<div class="container py-5">
			<div class="row justify-content-center">
				<div class="col-lg-10 text-center">
					<h1 class="display-3 text-white animated slideInDown">Cours</h1>
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb justify-content-center">
							<li class="breadcrumb-item">
								<a class="text-white" href="{{ path('app_home')}}">Accueil</a>
							</li>
							<li class="breadcrumb-item text-white active" aria-current="page">Cours</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<!-- Header End -->


	<!-- Team Start -->
	<div class="container-xxl py-5">
		<div class="container">
			<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
				<h6 class="section-title bg-white text-center text-primary px-3">Cours</h6>
				<h1 class="mb-5">Les diff√©rents cours</h1>
			</div>
			<div class="row g-4">
            {% if courses is defined %}
				{% for course in courses %}
					<div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
						<a href="{{ path('app_viewCourses')}}">
							<div class="team-item bg-light">
								<div class="overflow-hidden">
									<img class="img-fluid" src="https://oc-course.imgix.net/courses/7168871/7168871_teaser_picture_1687249906.jpg?auto=compress,format&q=80" alt="">
								</div>
								<div class="text-center p-4">
									<h5 class="mb-0">Instructor Name</h5>
									<small>Designation</small>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
            {% endif %}
			</div>
		</div>
	</div>
	<!-- Team End -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
		<i class="bi bi-arrow-up"></i>
	</a>
{% endblock %}
