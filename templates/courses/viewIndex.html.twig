{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<!-- Header Start -->
	<div class="container-fluid bg-primary py-5 mb-5 page-header">
		<div class="container py-5">
			<div class="row justify-content-center">
				<div class="col-lg-10 text-center">
					<h1 class="display-3 text-white animated slideInDown">{{course.title}}</h1>
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb justify-content-center">
							<li class="breadcrumb-item">
								<a class="text-white" href="{{ path('app_home')}}">Accueil</a>
							</li>
							<li class="breadcrumb-item">
								<a class="text-white" href="{{ path('app_courses')}}">Cours</a>
							</li>
							<li class="breadcrumb-item text-white active" aria-current="page">Lorem ipsum</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<!-- Header End -->


	<!-- Categories Start -->
	<div class="container-xxl py-5 category">
		<div class="container">
			<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
				<h6 class="section-title bg-white text-center text-primary px-3">{{course.category.label}}</h6>
				<h1 class="mb-5">{{course.title}}</h1>
			</div>
            <div class="description row g-5">
                <div class="col-lg-6 col-md-6">
					<img style="width: 560px; height: 315px;" src="{{ course.img }}" alt="">
					{# <iframe width="560" height="315" src="https://www.youtube.com/embed/keyRM3h_7tk?si=QPtzyBGRaubcJUU1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>                </div> #}
                </div>
				<div class="col-lg-6 col-md-6 d-flex align-items-center">
                    <p>{{course.description}}</p>
                </div>
            </div>
			<div class="accordion mt-5" id="accordionExample">
			{% for chapter in course.chapters %}
				<div class="accordion-item">
					<h2 class="accordion-header">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
							{{chapter.title}}
						</button>
					</h2>
					<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
						<div class="accordion-body d-flex flex-column">
							<div class="video d-flex justify-content-center ">
								<iframe width="560" height="315" src="{{chapter.videoUrl}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
							</div>
							<p class="mt-3">{{chapter.content}}</p>
						</div>
						<div class=" d-flex justify-content-end">
							<div class="nextChapter w-25 me-3 mb-3">
								<button class="btn btn-primary w-100 py-3 rounded-pill" type="submit">Passer au chapitre suivant</button>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
				
				
			</div>
		</div>
	</div>
	<!-- Categories Start -->

	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
		<i class="bi bi-arrow-up"></i>
	</a>
{% endblock %}
